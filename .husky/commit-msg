#!/bin/sh
# Validate commit message format
# Allows: feat:, fix:, docs:, style:, refactor:, test:, chore:
# Skips validation for merge commits

commit_msg=$(cat "$1")

# Skip validation for merge commits
if echo "$commit_msg" | grep -qE "^Merge (branch|pull request)"; then
    exit 0
fi

commit_regex='^(feat|fix|docs|style|refactor|test|chore)(\(.+\))?: .{1,50}'

if ! echo "$commit_msg" | grep -qE "$commit_regex"; then
    echo "‚ùå Invalid commit message format!"
    echo ""
    echo "Format: type(scope): description"
    echo ""
    echo "Types: feat, fix, docs, style, refactor, test, chore"
    echo "Example: feat(button): add new variant prop"
    echo "Example: fix: resolve theme switching issue"
    echo ""
    exit 1
fi
